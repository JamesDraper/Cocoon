{
    "name": "james-draper/cocoon",
    "description": "A simple php view renderer.",
    "type": "library",
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Cocoon\\": "src"
        }
    },
    "autoload-dev": {
        "files": ["res/TestHelper.php"]
    },
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.4",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
